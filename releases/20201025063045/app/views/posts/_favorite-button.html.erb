<span id = "favorite-<%= post.id %>">
	<% if post.favorited_by?(current_user) %>
		<%= link_to post_favorites_path(post), method: :delete, data: {"turbolinks" => false}, remote: true do %>
	  		<span class="glyphicon glyphicon-heart"></span>
		<% end %>
	<% else %>
		<%= link_to post_favorites_path(post), method: :post, data: {"turbolinks" => false}, remote: true do %>
	 		<span class="glyphicon glyphicon-heart-empty"></span>
		<% end %>
	<% end %>
</span>