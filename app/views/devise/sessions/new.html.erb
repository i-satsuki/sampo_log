<div class="container">
  <div class="row">
    <h2 class="text-center">ログイン</h2>
  </div>

  <div class="col-xs-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="field">
          <div class="col-xs-4">
              <%= f.label :email, "メールアドレス" %>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-4" %>
        </div>
      </div>

        <div class="row">
          <div class="field">
            <div class="col-xs-4">
              <%= f.label :password, "パスワード" %>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <% if devise_mapping.rememberable? %>
            <div class="col-xs-4">
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "ログインを記憶する" %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="row">
          <div class="actions">
            <%= f.submit "ログイン", class: "col-xs-8 btn btn-success signup-btn" %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>