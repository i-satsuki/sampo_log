<div class="container">
	<dir class="row">
		<h2 class="text-center col-xs-12">投稿リスト</h2>
	</dir>
	<div class="row">
		<div class="col-sm-offset-1">
			<% @posts.each do |post| %>
				<div class="col-sm-4">
					<div class="post-box text-center">
						<%= link_to post_path(post), class: "post_#{post.id} " do %>
							<%= attachment_image_tag(post, :image, size: "200x200", fallback: "no_image.png", class: "post-image") %> <br>
							<p class="post-title col-sm-offset-1 col-sm-6"><%= post.title %></p>
						<% end %>
						<%= render 'favorites/favorite-button', post: post %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class= "text-center paginate">
			<%= paginate(@posts) %>
		</div>
	</div>
</div>