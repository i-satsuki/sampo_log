<div class="row">
	<h2 class="text-center"><%= @post.title %></h2>
</div>

<div class="row">
	<div class="col-xs-5">
		<!-- I18n.lは日時フォーマットのメソッド -->
	<i class="glyphicon glyphicon-calendar"></i><%= I18n.l @post.created_at, format: :short, class: "post-time" %>
	</div>
</div>

<div class="row">
	<div class="col-xs-5">
		<%= attachment_image_tag @post, :image, size: "450x450", fallback: "no_image.png" %> <br>
	</div>

	<div class="col-xs-7">
		<p class="body-box"><%= @post.body %></p>

		<div class="steps-box text-center">
			<span>歩数：</span><%= @post.steps %><span>歩</span>
		</div>

		<%= render partial: 'favorites/favorite-button', locals: { post: @post } %><%= @post.favorites.count%>
		<span class="glyphicon glyphicon-comment" aria-hidden="true"></span><%= @post.comments.count %>
	</div>
</div>

<div class="row">
	<% if @post.user == current_user %>
		<div class="col-xs-offset-9">
			<div class="text-center">
				<%= link_to "編集する", edit_post_path(@post), class: "glyphicon glyphicon-edit btn btn-default edit_post_#{@post.id}" %>
				<%= link_to "削除する", post_path(@post), method: :delete, class: "glyphicon glyphicon-trash btn btn-danger trash-btn" %>
			</div>
		</div>
	<% end %>
</div>

<div class="row">
	<div id="comment-area">
		<%= render partial: 'comments/index', locals: { comments: @comments } %>
	</div>
</div>

<div class="row">
	<div id="comment-form">
		<%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
	</div>
</div>
