<div class="container">
  <div class="row">
    <h2 class="text-center col-xs-12">管理者ログイン</h2>
  </div>

  <div class="col-sm-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-sm-8">
            <%= content_tag(:div, flash[:alert], :id => "flash_alert", class: "alert alert-danger") if flash[:alert] %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <div class="col-sm-4">
                <%= f.label :email, "メールアドレス" %>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4" %>
          </div>
        </div>

          <div class="row">
            <div class="field">
              <div class="col-sm-4">
                <%= f.label :password, "パスワード" %>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-4" %>
            </div>
          </div>

          <div class="row">
            <% if devise_mapping.rememberable? %>
              <div class="col-sm-4">
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "ログインを記憶する" %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="row">
            <div class="actions">
              <%= f.submit "ログイン", class: "col-sm-8 btn btn-success signup-btn" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>