<div class="row">
	<table class="admin_customer_index has_border table text-center">
		<thead>
			<th class="text-center">タイトル</th>
			<th class="text-center">投稿者</th>
		</thead>
		<tbody>
			<% posts.each do |post| %>
				<tr>
					<td><%= link_to post.title, admin_post_path(post) %></td>
					<td><%= attachment_image_tag(@user, :profile_image, size: "40x40", fallback: "no_image.png", style: "border-radius: 50%;") %></td>
					<td class="text-left"><%= post.user.name %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="row">
	<div class="text-center">
		<%= paginate posts %>
	</div>
</div>