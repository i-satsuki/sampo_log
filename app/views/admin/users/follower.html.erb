<div class="container">
	<div class="row">
		<h2 class="text-center col-xs-12">フォロワー</h2>
	</div>

	<% if @followers.count > 0 %>
			<% @followers.each do |follower| %>
				<div class="relationship-list">
					<div class="row">
						<div class="follower text-center">
							<%= link_to admin_user_path(follower), class: "user_#{follower.id}" do %>
								<%= attachment_image_tag(follower, :profile_image, size: "50x50", fallback: "no_image.png", style: "border-radius: 50%;", class: " relationship-profile-image") %>
							<% end %>

							<%= link_to admin_user_path(follower), class: "user_#{follower.id} relationship-name" do %>
								<%= follower.name %>
							<% end %>
						</div>
					</div>
				</div>
			<% end %>
	<% else %>
		<div class="row">
			<h3 class="text-center">ユーザーはいません</h3>
		</div>
	<% end %>
</div>