			<div id="error_explanation">
				<h3><%= post.comment.errors.count %>件のエラーが発生しました。</h3>
				<ul>
					<% post.comment.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>ß
			</div>
		<% end %>

	  	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= f.label :comment, "コメントする" %> <br>
