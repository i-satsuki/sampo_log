<%= form_with(model:[post, comment], data: {remote: true}) do |f| %>
  <% if comment.errors.any? %>
		<div id="error_explanation">
			<h3><%= post.comment.errors.count %>件のエラーが発生しました。</h3>
			<ul>
				<% post.comment.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="col-xs-12">
		<span class="material-icons">add_comment</span></span><%= f.label :comment, "コメントする" %> <br>
    	<%= f.text_area :comment, size: "90x5", class: "form-control"  %> <br>
	</div>

	<div class="col-xs-12 comment-submit">
		 <%= f.submit '送信', class: "btn btn-default col-xs-3" %>
	</div>
<% end %>