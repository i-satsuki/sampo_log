<div class="col-xs-12">
	<table class="table">
		<thead>
			<tr>
				<th><i class="glyphicon glyphicon-list"></i><%= label :comment, "コメント一覧" %></th>
			</tr>
		</thead>
		<% comments.each do |comment| %>
			<tbody>
				<tr>
					<td class="col-xs-4">
						<%= link_to user_path(comment.user), class: "user_#{comment.user.id}" do %>
							<%= attachment_image_tag comment.user, :profile_image, size: "50x50",  fallback: "no_image.png", style: "border-radius: 50%;" %>
							<%= comment.user.name %>
						<% end %>
					</td>
					<td>
						<p><%= comment.comment %></p>
						(<%= I18n.l comment.created_at, format: :short %>)
					</td>
					<td>
						<% if comment.user == current_user %>
							<%= link_to '削除', post_comment_path(comment.post, comment), class: 'btn btn-danger', method: :delete, remote: true %>
						<% end %>
					</td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>